{# templates/login/login.html.twig #}
{% extends 'default/connection.html.twig' %}

{# ... #}

{% block login %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">

        <form action="{{ path('login') }}" method="post" class="col-12">

            <div class="row mt-3">
                <div class="col-12">
                    <div class="row">
                        <label for="username">Adresse Email</label>
                    </div>
                    <div class="row mt-2 input-group input-group-lg input-field">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="col-11 border border-0 mx-auto rounded input-field">
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="row">
                        <label for="password">Mot de passe</label>
                    </div>
                    <div class="row mt-2 input-group input-group-lg input-field">
                        <input type="password" id="password" name="_password" class="col-11 mx-auto border border-0 rounded input-field">
                    </div>
                </div>
            </div>
                    
                    
            <input type="hidden" name="_target_path" value="/backoffice">
                    
            <div class="row m-3">
                <div class="col-12 mt-2 align-center">
                    <button class="btn btn-primary" type="submit" class="mx-auto">Se connecter</button>
                </div>
            </div>

        </form>
    </div>

    <div class="row mb-3">
        <div class="ps-5 col-9">
            <a href="/register"><i>Vous n'avez pas de compte ?</i></a>
        </div>
    </div> 
            
{% endblock %}