{# templates/default/validationannonce.twig #}
{% extends 'utilisateur/consultant.twig' %}

{% block validation %}
    
    <div class="addUserBox row">
        <div>
            <h3>Liste des annonces à valider.</h3>

            {% for item in annonces %}
                <div class="row m-1 bg-info rounded">
                    <div class="col-9">
                        <p><b>{{ item.id|e }} {{ item.recruteurId|e }} {{ item.intitulé|e }} {{ item.nomEntreprise|e }}</b></p>
                    </div>

                    <div class="col-3">
                        <a href={{ url('annonce', {'itemid': item.id, 'id':user.id}) }}>Valider l'annonce</a>
                    </div>
                </div>
            {% endfor %}

        </div>
        
    </div>

{% endblock %}