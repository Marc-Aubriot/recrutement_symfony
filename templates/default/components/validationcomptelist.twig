{# templates/default/validationcomptelist.twig #}
{% extends 'utilisateur/consultant.twig' %}

{% block validation %}
    
    <div class="candidatureListBox row">
        <div>
            <h3>Liste des comptes à valider.</h3>

            {% for item in users %}
                <div class="row m-1 bg-info rounded">
                    <div class="col-9">
                        <p><b>{{ item.email|e }}</b></p>
                    </div>

                    <div class="col-3">
                        <a href={{ url('compte', {'itemid': item.id, 'id':user.id}) }}>Valider le compte</a>
                    </div>
                </div>
            {% endfor %}

        </div>
        
        <li><a href={{ url('backofficeConsultant') }}>Retour page précèdente</a></li>
    </div>

{% endblock %}